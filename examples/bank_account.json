{
  "model": {
    "name": "Bank Account with Interest",
    "description": "Simple compound interest model",

    "time": {
      "start": 0,
      "stop": 20,
      "dt": 0.1,
      "units": "years"
    },

    "stocks": [
      {
        "name": "balance",
        "initial": 1000,
        "inflows": ["interest"],
        "units": "dollars"
      }
    ],

    "flows": [
      {
        "name": "interest",
        "equation": "balance * interest_rate",
        "units": "dollars/year"
      }
    ],

    "parameters": [
      {
        "name": "interest_rate",
        "value": 0.05,
        "units": "1/year",
        "description": "Annual interest rate (5%)"
      }
    ]
  }
}
